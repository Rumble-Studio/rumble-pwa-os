:host {
	display: inline-block;
	padding: 5px;
	margin-top: 5px;
	width: 100%;
}

.header {
	margin-bottom: 30px;
}

.container {
	text-align: center;
	.text-input {
		width: 100%;
	}

	.border-and-shadow {
		box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
		padding: 10px;
		border-radius: 10px;
		margin: 10px 0px;
	}

	.file-upload {
		text-align: center;
		max-height: 180px;
		margin-top: 40px;

		.warn-name {
			font-style: italic;
		}
	}

	.file-upload-section {
		margin-top: 40px;
	}

	.file-upload-name-container {
		margin-bottom: 15px;
		text-align: left;

		.file-upload-name {
			display: block;
			text-overflow: ellipsis;
			white-space: nowrap;
			overflow: hidden;
		}
	}

	.file-preview {
		margin-bottom: 15px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		audio,
		video {
			max-width: 100%;
			max-height: 500px;
		}
		img {
			max-width: 100%;
			max-height: 300px;
			background-color: #cccccc55;
		}
	}

	.spinner {
		display: inline-block;
		margin-right: 8px;
	}
}

.normal-btn {
	margin: 0px 5px 0px 5px;
}

.import-btn {
	margin: 10px 5px 0px 5px;
}

.image-overlay {
	position: relative;
	display: inline-block;
	line-height: 0;
	padding: 2px 10px;

	.over-image {
		position: absolute;
		top: 0;
		right: 20px;
		z-index: 9;

		&.hover {
			transition: height 50ms ease-out;
			height: 80px;
			overflow: hidden;
			padding: 10px;
		}

		&.not-hover {
			transition: height 50ms ease-out;
			height: 0;
			overflow: hidden;
		}

		.button-over-image {
			margin: 5px 0 0 5px;
			width: 30px;
			height: 30px;
		}

		// ::ng-deep .mat-button-wrapper {
		//   padding: 0px;
		//   display: flex;
		//   justify-content: center;
		//   align-items: center;
		// }
	}
}

.imported {
	cursor: pointer;
}

.hide {
	display: none;
}
